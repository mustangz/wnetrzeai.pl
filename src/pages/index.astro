      document.getElementById('agency-price').textContent = prices.agency;
      document.getElementById('compare-price').textContent = prices.starter + ' PLN';
      
      document.getElementById('starter-per').textContent = (prices.starter / 10).toFixed(2).replace('.', ',') + ' PLN za render';
      document.getElementById('pro-per').textContent = (prices.pro / 50).toFixed(2).replace('.', ',') + ' PLN za render';
      document.getElementById('agency-per').textContent = (prices.agency / 300).toFixed(2).replace('.', ',') + ' PLN za render';

      // Update checkout button prices
      document.querySelectorAll('.checkout-btn').forEach(btn => {
        const plan = btn.dataset.plan.toLowerCase();
        btn.dataset.price = prices[plan];
