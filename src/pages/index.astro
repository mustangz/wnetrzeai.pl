      // Apply monthly multiplier
      const multiplier = isYearly ? 0.8 : 1.25;
      document.getElementById('starter-price').textContent = Math.round(prices.starter * multiplier);
      document.getElementById('pro-price').textContent = Math.round(prices.pro * multiplier);
      document.getElementById('agency-price').textContent = Math.round(prices.agency * multiplier);
