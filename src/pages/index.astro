  <script is:inline>
    // Pricing Toggle
    const pricing = {
      monthly: { starter: 49, pro: 99, agency: 249 },
      yearly: { starter: 39, pro: 79, agency: 199 }
    };
    const renders = { starter: 10, pro: 50, agency: 300 };
    let isYearly = true;
    
    document.getElementById('billing-toggle').addEventListener('click', function() {
      isYearly = !isYearly;
      this.classList.toggle('active');
      
      const monthlyLabel = document.getElementById('monthly-label');
      const yearlyLabel = document.getElementById('yearly-label');
      
      if (isYearly) {
        monthlyLabel.className = 'text-sm text-[#a1a1aa]';
        yearlyLabel.className = 'text-sm text-white font-medium';
        yearlyLabel.innerHTML = 'Rocznie <span class="text-violet-400">-20%</span>';
      } else {
        monthlyLabel.className = 'text-sm text-white font-medium';
        yearlyLabel.className = 'text-sm text-[#a1a1aa]';
        yearlyLabel.innerHTML = 'Rocznie';
      }
      
      const prices = isYearly ? pricing.yearly : pricing.monthly;
      
      document.getElementById('starter-price').textContent = prices.starter;
      document.getElementById('pro-price').textContent = prices.pro;
      document.getElementById('agency-price').textContent = prices.agency;
      
      document.getElementById('starter-per').textContent = 
        (prices.starter / renders.starter).toFixed(2).replace('.', ',') + ' PLN za render';
      document.getElementById('pro-per').textContent = 
        (prices.pro / renders.pro).toFixed(2).replace('.', ',') + ' PLN za render';
      document.getElementById('agency-per').textContent = 
        (prices.agency / renders.agency).toFixed(2).replace('.', ',') + ' PLN za render';
    });
    
    // Initialize pricing
    document.getElementById('starter-price').textContent = pricing.yearly.starter;
    document.getElementById('pro-price').textContent = pricing.yearly.pro;
    document.getElementById('agency-price').textContent = pricing.yearly.agency;
  </script>
