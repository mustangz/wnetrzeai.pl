---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- ============================================
       SECTION 1: NAVBAR
       ============================================ -->
  <nav class="fixed top-0 left-0 right-0 z-50 glass border-b border-white/[0.08]">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        </div>
        <span class="text-xl font-bold tracking-tight">WnętrzeAI</span>
      </a>
      
      <!-- CTA Only -->
      <a href="#pricing" class="btn-primary text-sm">
        Rozpocznij
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </nav>

  <!-- ============================================
       SECTION 2: HERO
       ============================================ -->
  <section class="relative min-h-screen flex items-center pt-24 pb-16 px-6 overflow-hidden">
    <!-- Background Glow -->
    <div class="hero-glow"></div>
    
    <div class="max-w-6xl mx-auto w-full relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Content -->
        <div class="text-center lg:text-left animate-fade-in">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 badge badge-accent mb-6">
            <span class="w-1.5 h-1.5 rounded-full bg-violet-400 animate-pulse"></span>
            Oszczędź 99% kosztów stagingu
          </div>
          
          <!-- Headline -->
          <h1 class="heading-hero mb-6">
            Puste mieszkanie<br/>
            <span class="gradient-text">urządzone w 30s</span>
          </h1>
          
          <!-- Subheadline -->
          <p class="body-large mb-8 max-w-lg mx-auto lg:mx-0">
            AI Virtual Staging dla agentów nieruchomości. Dodaj meble i dekoracje do zdjęć pustych wnętrz. 
            <span class="text-white font-medium">40% więcej zapytań</span>, szybsza sprzedaż.
          </p>
          
          <!-- CTA -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="#pricing" class="btn-primary">
              Wypróbuj za darmo
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </a>
          </div>
          
          <!-- Trust -->
          <p class="text-xs text-[#52525b] mt-4">
            14-dniowa gwarancja zwrotu • Bez karty kredytowej
          </p>
        </div>
        
        <!-- Hero Image - Before/After -->
        <div class="relative animate-fade-in stagger-2">
          <div class="card-gradient p-2">
            <div class="grid grid-cols-2 gap-2">
              <!-- Before -->
              <div class="relative aspect-[4/3] rounded-lg overflow-hidden">
                <img 
                  src="https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=600&q=80" 
                  alt="Pusty salon przed virtual stagingiem" 
                  class="w-full h-full object-cover"
                />
                <span class="label-before">Przed</span>
              </div>
              <!-- After -->
              <div class="relative aspect-[4/3] rounded-lg overflow-hidden">
                <img 
                  src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=600&q=80" 
                  alt="Salon po virtual stagingu" 
                  class="w-full h-full object-cover"
                />
                <span class="label-after">Po</span>
              </div>
            </div>
            
            <!-- Caption -->
            <div class="flex items-center justify-between px-2 py-3">
              <span class="text-xs text-[#71717a]">Transformacja w 30 sekund</span>
              <div class="flex items-center gap-1.5">
                <div class="flex -space-x-1">
                  <div class="w-5 h-5 rounded-full bg-violet-500/30 border border-[#0a0a0f]"></div>
                  <div class="w-5 h-5 rounded-full bg-fuchsia-500/30 border border-[#0a0a0f]"></div>
                  <div class="w-5 h-5 rounded-full bg-amber-500/30 border border-[#0a0a0f]"></div>
                </div>
                <span class="text-xs text-[#71717a]">2,100+ agentów</span>
              </div>
            </div>
          </div>
          
          <!-- Floating Stats Card -->
          <div class="absolute -bottom-4 -left-4 bg-[#1a1a25] border border-white/[0.08] rounded-xl p-4 shadow-2xl animate-float hidden lg:block">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-green-500/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
              </div>
              <div>
                <div class="text-lg font-bold">+40%</div>
                <div class="text-xs text-[#71717a]">więcej zapytań</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 3: PROBLEM
       ============================================ -->
  <section class="py-24 px-6">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h2 class="heading-section mb-4">
          Puste mieszkania sprzedają się<br/>
          <span class="text-[#71717a]">wolniej i taniej</span>
        </h2>
        <p class="body-large max-w-2xl mx-auto">
          Kupujący nie potrafią wyobrazić sobie potencjału pustej przestrzeni. 
          Scrollują dalej, zanim zdążysz powiedzieć "świetna lokalizacja".
        </p>
      </div>
      
      <!-- Problem Cards -->
      <div class="grid md:grid-cols-3 gap-6">
        <!-- Card 1 -->
        <div class="card-gradient text-center">
          <div class="w-12 h-12 rounded-xl bg-red-500/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </div>
          <h3 class="heading-card mb-2">Mniej zapytań</h3>
          <p class="body-small">
            Puste zdjęcia nie przyciągają uwagi w ogłoszeniach. Kupujący scrollują dalej.
          </p>
        </div>
        
        <!-- Card 2 -->
        <div class="card-gradient text-center">
          <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="heading-card mb-2">Dłuższy czas sprzedaży</h3>
          <p class="body-small">
            Oferty z pustymi zdjęciami wiszą średnio 3x dłużej na rynku.
          </p>
        </div>
        
        <!-- Card 3 -->
        <div class="card-gradient text-center">
          <div class="w-12 h-12 rounded-xl bg-amber-500/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="heading-card mb-2">Niższa cena końcowa</h3>
          <p class="body-small">
            Kupujący negocjują ostrzej przy pustych nieruchomościach. Tracisz prowizję.
          </p>
        </div>
      </div>
      
      <!-- Comparison Highlight -->
      <div class="mt-12 grid md:grid-cols-2 gap-6 max-w-3xl mx-auto">
        <div class="card border-red-500/20 bg-red-500/5 text-center">
          <p class="text-[#71717a] text-sm mb-1">Tradycyjny staging</p>
          <div class="text-4xl font-bold text-red-400">3 000 - 8 000 PLN</div>
          <p class="text-sm text-[#52525b] mt-1">+ 3-7 dni oczekiwania</p>
        </div>
        <div class="card-featured text-center">
          <p class="text-[#71717a] text-sm mb-1">WnętrzeAI</p>
          <div class="text-4xl font-bold gradient-text">49 PLN</div>
          <p class="text-sm text-violet-300 mt-1">Gotowe w 30 sekund</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 4: SOLUTION (How It Works)
       ============================================ -->
  <section class="py-24 px-6 bg-[#0d0d14]">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h2 class="heading-section mb-4">
          Jak to <span class="gradient-text">działa</span>?
        </h2>
        <p class="body-large max-w-xl mx-auto">
          Trzy proste kroki. Bez instalacji, bez nauki, bez czekania.
        </p>
      </div>
      
      <!-- Steps -->
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Step 1 -->
        <div class="relative">
          <div class="card text-center h-full">
            <div class="w-12 h-12 rounded-xl bg-violet-500/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <div class="badge mb-3">Krok 1</div>
            <h3 class="heading-card mb-2">Wgraj zdjęcie</h3>
            <p class="body-small">
              Zrób zdjęcie pustego pokoju telefonem lub aparatem. Wgraj do aplikacji w 5 sekund.
            </p>
          </div>
          <!-- Arrow -->
          <div class="hidden md:block absolute top-1/2 -right-4 transform -translate-y-1/2 z-10">
            <svg class="w-8 h-8 text-[#27273a]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
        
        <!-- Step 2 -->
        <div class="relative">
          <div class="card text-center h-full">
            <div class="w-12 h-12 rounded-xl bg-fuchsia-500/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-fuchsia-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
              </svg>
            </div>
            <div class="badge mb-3">Krok 2</div>
            <h3 class="heading-card mb-2">Wybierz styl</h3>
            <p class="body-small">
              Nowoczesny, klasyczny, skandynawski? Wybierz styl mebli i dekoracji z 15+ dostępnych.
            </p>
          </div>
          <!-- Arrow -->
          <div class="hidden md:block absolute top-1/2 -right-4 transform -translate-y-1/2 z-10">
            <svg class="w-8 h-8 text-[#27273a]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
        
        <!-- Step 3 -->
        <div class="card text-center h-full">
          <div class="w-12 h-12 rounded-xl bg-amber-500/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
          </div>
          <div class="badge mb-3">Krok 3</div>
          <h3 class="heading-card mb-2">Pobierz wynik</h3>
          <p class="body-small">
            W 30 sekund otrzymujesz profesjonalne zdjęcie gotowe do publikacji w jakości HD.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 5: SOCIAL PROOF
       ============================================ -->
  <section class="py-24 px-6">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h2 class="heading-section mb-4">
          Zaufali nam <span class="gradient-text">liderzy rynku</span>
        </h2>
        <p class="body-large max-w-xl mx-auto">
          Ponad <span class="text-white font-semibold">2,100 agentów</span> z 340 biur nieruchomości korzysta z WnętrzeAI
        </p>
      </div>
      
      <!-- Logo Grid -->
      <div class="logo-grid mb-16">
        <div class="logo-item text-lg font-bold text-[#52525b]">RE/MAX</div>
        <div class="logo-item text-lg font-bold text-[#52525b]">Freedom</div>
        <div class="logo-item text-lg font-bold text-[#52525b]">Metrohouse</div>
        <div class="logo-item text-lg font-bold text-[#52525b]">Open House</div>
        <div class="logo-item text-lg font-bold text-[#52525b]">Masters</div>
        <div class="logo-item text-lg font-bold text-[#52525b]">Miller</div>
      </div>
      
      <!-- Testimonials -->
      <div class="grid md:grid-cols-3 gap-6">
        <!-- Testimonial 1 -->
        <div class="card-gradient relative">
          <div class="quote-mark absolute -top-2 left-4">"</div>
          <p class="text-[#a1a1aa] mb-6 pt-4 relative z-10">
            Klienci od razu widzą potencjał mieszkania. Ilość zapytań <span class="text-white font-medium">wzrosła o 40%</span> odkąd używam virtual stagingu.
          </p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center text-white font-semibold text-sm">
              AK
            </div>
            <div>
              <div class="font-medium text-sm">Anna Kowalska</div>
              <div class="text-xs text-[#71717a]">Agent RE/MAX • 8 lat doświadczenia</div>
            </div>
          </div>
        </div>
        
        <!-- Testimonial 2 -->
        <div class="card-gradient relative">
          <div class="quote-mark absolute -top-2 left-4">"</div>
          <p class="text-[#a1a1aa] mb-6 pt-4 relative z-10">
            Oszczędzam <span class="text-white font-medium">2000 zł</span> na każdym stagingu. Wcześniej wynajmowałem firmy do fizycznego umeblowania.
          </p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center text-white font-semibold text-sm">
              MW
            </div>
            <div>
              <div class="font-medium text-sm">Marek Wiśniewski</div>
              <div class="text-xs text-[#71717a]">Właściciel biura • 50+ transakcji/rok</div>
            </div>
          </div>
        </div>
        
        <!-- Testimonial 3 -->
        <div class="card-gradient relative">
          <div class="quote-mark absolute -top-2 left-4">"</div>
          <p class="text-[#a1a1aa] mb-6 pt-4 relative z-10">
            W 30 sekund mam gotowe zdjęcie. Przed prezentacją z klientem robię staging <span class="text-white font-medium">na miejscu z telefonu</span>.
          </p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-amber-500 to-orange-500 flex items-center justify-center text-white font-semibold text-sm">
              KL
            </div>
            <div>
              <div class="font-medium text-sm">Katarzyna Lewandowska</div>
              <div class="text-xs text-[#71717a]">Agent Freedom • Top 10% w regionie</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Stats Row -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-12">
        <div class="text-center">
          <div class="text-3xl font-bold gradient-text">87%</div>
          <div class="text-xs text-[#71717a]">szybsza sprzedaż</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold gradient-text">+15%</div>
          <div class="text-xs text-[#71717a]">wyższa cena</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold gradient-text">340+</div>
          <div class="text-xs text-[#71717a]">biur partnerskich</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold gradient-text">50K+</div>
          <div class="text-xs text-[#71717a]">wygenerowanych zdjęć</div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 6: PRICING
       ============================================ -->
  <section id="pricing" class="py-24 px-6 bg-[#0d0d14]">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h2 class="heading-section mb-4">
          Prosty <span class="gradient-text">cennik</span>
        </h2>
        <p class="body-large max-w-xl mx-auto">
          Zacznij za darmo, skaluj wraz z rozwojem. Bez ukrytych opłat.
        </p>
        
        <!-- Billing Toggle -->
        <div class="flex items-center justify-center gap-4 mt-8">
          <span id="monthly-label" class="text-sm text-[#a1a1aa]">Miesięcznie</span>
          <button id="billing-toggle" class="toggle-track active" aria-label="Przełącz rozliczanie">
            <span class="toggle-thumb"></span>
          </button>
          <span id="yearly-label" class="text-sm text-white font-medium">
            Rocznie <span class="text-violet-400">-20%</span>
          </span>
        </div>
      </div>
      
      <!-- Pricing Cards -->
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        <!-- Starter -->
        <div class="card flex flex-col">
          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-1">Starter</h3>
            <p class="text-sm text-[#71717a]">Dla pojedynczych agentów</p>
          </div>
          
          <div class="mb-6">
            <div class="flex items-baseline gap-1">
              <span id="starter-price" class="text-4xl font-bold">39</span>
              <span class="text-[#71717a]">PLN/mies</span>
            </div>
            <p id="starter-per" class="text-xs text-[#52525b] mt-1">3,90 PLN za render</p>
          </div>
          
          <ul class="space-y-3 mb-8 flex-grow">
            <li class="flex items-center gap-3 text-sm">
              <svg class="w-4 h-4 text-violet-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span><strong class="text-white">10 renderów</strong> miesięcznie</span>
            </li>
            <li class="flex items-center gap-3 text-sm">
              <svg class="w-4 h-4 text-violet-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Standardowa kolejka</span>
            </li>
            <li class="flex items-center gap-3 text-sm">
              <svg class="w-4 h-4 text-violet-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Bez watermarku</span>
            </li>
            <li class="flex items-center gap-3 text-sm">
              <svg class="w-4 h-4 text-violet-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>8 stylów wnętrz</span>
            </li>
          </ul>
          
          <a href="#cta" class="btn-secondary w-full">
            Wybierz Starter
          </a>
        </div>
        
        <!-- Pro - Featured -->
        <div class="card-featured flex flex-col relative">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2">
            <span class="bg-violet-500 text-white text-xs font-semibold px-3 py-1 rounded-full">
              Najpopularniejszy
            </span>
          </div>
          
          <div class="mb-6 mt-2">
            <h3 class="text-lg font-semibold mb-1">Pro</h3>
