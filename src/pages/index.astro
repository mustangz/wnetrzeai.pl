  <script>
    // Pricing data
    const pricing = {
      monthly: { starter: 49, pro: 99, agency: 249 },
      yearly: { starter: 39, pro: 79, agency: 199 }
    };
    const renders = { starter: 10, pro: 50, agency: 300 };
    let isYearly = true;
    let selectedPlan = 'pro';
    
    // Billing toggle
    function toggleBilling() {
      isYearly = !isYearly;
      const toggle = document.getElementById('toggle-knob');
      const monthlyLabel = document.getElementById('monthly-label');
      const yearlyLabel = document.getElementById('yearly-label');
      
      if (isYearly) {
        toggle.style.transform = 'translateX(32px)';
        monthlyLabel.className = 'text-gray-400';
        yearlyLabel.innerHTML = 'Rocznie <span class="text-primary text-sm">(-20%)</span>';
        yearlyLabel.className = 'text-white font-semibold';
      } else {
        toggle.style.transform = 'translateX(0)';
        monthlyLabel.className = 'text-white font-semibold';
        yearlyLabel.innerHTML = 'Rocznie';
        yearlyLabel.className = 'text-gray-400';
      }
      
      updatePrices();
    }
    
    function updatePrices() {
      const prices = isYearly ? pricing.yearly : pricing.monthly;
      
      document.getElementById('starter-price').textContent = prices.starter;
      document.getElementById('pro-price').textContent = prices.pro;
      document.getElementById('agency-price').textContent = prices.agency;
      
      document.getElementById('starter-per-render').textContent = (prices.starter / renders.starter).toFixed(2).replace('.', ',') + ' PLN za render';
      document.getElementById('pro-per-render').textContent = (prices.pro / renders.pro).toFixed(2).replace('.', ',') + ' PLN za render';
      document.getElementById('agency-per-render').textContent = (prices.agency / renders.agency).toFixed(2).replace('.', ',') + ' PLN za render';
    }
    
    // Initialize toggle position
    document.getElementById('toggle-knob').style.transform = 'translateX(32px)';
    
    // ROI Calculator
    const priceInput = document.getElementById('price-input');
    const priceIncrease = document.getElementById('price-increase');
    const commission = document.getElementById('commission');
    const roiMultiplier = document.getElementById('roi-multiplier');
    
    function formatPLN(num) {
      return num.toLocaleString('pl-PL') + ' PLN';
    }
    
    function calculateROI() {
      const price = parseInt(priceInput.value) || 0;
      const increase = price * 0.15;
      const commissionValue = increase * 0.02;
      const multiplier = Math.round(commissionValue / 39);
      
      priceIncrease.textContent = '+' + formatPLN(increase);
      commission.textContent = '+' + formatPLN(commissionValue);
      roiMultiplier.textContent = multiplier > 0 ? multiplier + 'x' : '0x';
    }
    
    priceInput.addEventListener('input', calculateROI);
    calculateROI();
    
    // Fake Checkout Modal
    function openCheckout(plan = 'pro') {
      selectedPlan = plan;
      const prices = isYearly ? pricing.yearly : pricing.monthly;
      const price = prices[plan];
      const planNames = { starter: 'Starter', pro: 'Pro', agency: 'Agency' };
      
      document.querySelector('#checkout-form h3').textContent = `ZamÃ³w ${planNames[plan]}`;
      document.querySelector('#checkout-form .bg-primary\\/10 span:last-child').textContent = `${price} PLN/mies`;
      document.querySelector('#checkout-form button[type="submit"]').textContent = `ğŸ’³ ZapÅ‚aÄ‡ ${price} PLN`;
      
      document.getElementById('checkout-modal').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      
      if (typeof gtag !== 'undefined') {
        gtag('event', 'begin_checkout', { value: price, currency: 'PLN', plan: plan });
      }
    }
    
    function closeCheckout() {
      document.getElementById('checkout-modal').classList.add('hidden');
      document.body.style.overflow = '';
      document.getElementById('checkout-form').classList.remove('hidden');
      document.getElementById('checkout-success').classList.add('hidden');
    }
    
    document.getElementById('fake-payment-form').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const email = this.querySelector('input[type="email"]').value;
      const prices = isYearly ? pricing.yearly : pricing.monthly;
      const price = prices[selectedPlan];
      
      try {
        await fetch('https://formspree.io/f/xyzyvvpp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            email: email, 
            source: 'fake_checkout',
            plan: selectedPlan.toUpperCase(),
            billing: isYearly ? 'yearly' : 'monthly',
            price: price,
            intent: `would_pay_${price}`
          })
        });
      } catch (err) {
        console.log('Form submission error:', err);
      }
      
      if (typeof gtag !== 'undefined') {
        gtag('event', 'purchase_intent', { value: price, currency: 'PLN', plan: selectedPlan });
      }
      
      document.getElementById('checkout-form').classList.add('hidden');
      document.getElementById('checkout-success').classList.remove('hidden');
    });
    
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') closeCheckout();
    });
  </script>
